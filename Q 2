#include<stdio.h>
#include<bits/stdc++.h>
using namespace std;

int main(){
    vector<int> apples;
    int count = 0;
    int a;
    int sum = 0;
    cout<<"Enter apple weight in gram (-1 to stop ) : ";
    
    //taking the all the apples input
    
    for(int i=0;i!=-1;i++){ 
        cin>>a;
        if(a==-1){
            break;
        }
        else 
        {
            cout<<"Enter apple weight in gram (-1 to stop ) : ";
            apples.push_back(a);
            count++;
            sum += a;
        }
    }
    // for(int i=0;i<count;i++){
    //     cout<<apples[i]<<endl;
    // }
    cout<<sum<<endl;
    
    sort(apples.begin(),apples.end());
    
    int ram_weight = 0.5 * sum;
    int sham_weight = (3* sum)/10;
    int rahim_weight = 0.2 * sum;
    
    cout<<ram_weight<<endl;
    cout<<sham_weight<<endl;
    cout<<rahim_weight<<endl;
    vector<int> rahim;
    vector<int> sham;
    vector<int> ram;
    
    // rahim apples distribution
    for(int i=0;i<count;i++){
        int check = 0;
        for(int j=i;j<count;j++){
            vector<int> v;
            int a=0;
            int temp=0;
            if(temp == rahim_weight)
            {
                check = -1;
                for(int k=0;i<a;i++)
                {
                    int b = v[k];
                    rahim.push_back(apples[b]);
                }
                vector<int>::iterator i, a;

                apples.erase(i,a);
                break;
            }
            else if(temp<rahim_weight){
                temp += apples[j];
                v.push_back(j);
                a=j;
            }
            else{
                v.clear();
                break;
            }
        }
        if(check == -1){
                break;
        }
    }
    
    // sham apples distribution
    for(int i=0;i<count;i++){
        int check = 0;
        for(int j=i;j<count;j++){
            vector<int> v;
            int a=0;
            int temp=0;
            if(temp == sham_weight)
            {
                check = -1;
                for(int k=0;i<a;i++)
                {
                    int b = v[k];
                    sham.push_back(apples[b]);
                }
                vector<int>::iterator i, a;

                apples.erase(i,a);
                break;
            }
            else if(temp<sham_weight){
                temp += apples[j];
                v.push_back(j);
                a=j;
            }
            else{
                v.clear();
                break;
            }
        }
        if(check == -1){
                break;
        }
    }
    
    // ram apples distribution
    // the remaining apples present in the vector apples belongs to ram
    
    //rahim apples
    cout<<"Rahim : ";
    for(int i=0;i<rahim.size();i++){
        cout<<rahim[i]<<" ";
    }
    cout<<endl;
    
    //sham apples
    cout<<"Rahim : ";
    for(int i=0;i<sham.size();i++){
        cout<<sham[i]<<" ";
    }
    cout<<endl;
    
    //ram apples
    cout<<"Rahim : ";
    for(int i=0;i<apples.size();i++){
        cout<<apples[i]<<" ";
    }
}
